{
  "name": "playlab42",
  "version": "0.1.0",
  "description": "Plateforme modulaire de jeux pour la formation assist√©e par IA",
  "type": "module",
  "scripts": {
    "serve": "npx serve . -p 5242 -C",
    "build": "npm run build:catalogue && npm run build:parcours && npm run build:bookmarks",
    "build:catalogue": "node src/scripts/build-catalogue.js",
    "build:parcours": "node scripts/build-parcours.js",
    "build:bookmarks": "node scripts/build-bookmarks.js",
    "inject-version": "node scripts/inject-version.js",
    "version:patch": "node scripts/bump-version.js patch",
    "version:minor": "node scripts/bump-version.js minor",
    "version:major": "node scripts/bump-version.js major",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint lib/ src/ games/",
    "lint:fix": "eslint lib/ src/ games/ --fix"
  },
  "keywords": [
    "games",
    "tools",
    "ai",
    "training",
    "typescript"
  ],
  "author": "BU DAP",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.2",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "serve": "^14.2.4"
  },
  "dependencies": {
    "marked": "^17.0.1"
  }
}
